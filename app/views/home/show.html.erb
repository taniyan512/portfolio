<div class="card card-body blur shadow-blur mx-3 mx-md-4 mt-n6 mb-4">
  <div class="py-sm-7 py-5 position-relative">
    <div class="container">
      <div class="row">
        <div class="col-12 mx-auto">
          <div class="mt-n8 mt-md-n9 text-center">
            <%= image_tag @user.profile_image, class: "avatar  avatar-xxl shadow-xl position-relative z-index-2", size: "200x180" %>
          </div>
          <div class="row py-5">
            <div class="col-lg-7 col-md-7 z-index-2 position-relative px-md-2 px-sm-5 mx-auto">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <h3 class="mb-0"><%= @user.user_name %></h3>
                  <div class="card-body-icons">
                  <button type="button" class="btn btn-sm text-nowrap mb-0"><i class="bi bi-youtube card-dody-icon"></i></button>
                  <button type="button" class="btn btn-sm text-nowrap mb-0"><i class="bi bi-twitter card-dody-icon"></i></button>
                  <button type="button" class="btn btn-sm text-nowrap mb-0"><i class="bi bi-instagram"></i></button>
                </div>
              </div>
              <p class="text-lg mb-0">
                <%= @user.self_introduce %>
                <% if @user == current_user %><br>
                <button type="button" class="btn btn-sm text-nowrap mb-0"><i class="bi bi-pencil-square"></i></button>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="py-3">
    <div class="container">
        <div class="col-lg-6 container">
          <h3 class="mb-5">サービス一覧</h3>
        </div>
      <div class="row">
        <div class="col-lg-3 col-sm-6">
          <% @services.each do |service| %>
          <div class="card card-plain">
            <div class="card-body px-0">
              <h5>
                <%= service.lesson_time %>分
              </h5>
              <h5>
                <%= service.lesson_price %>分
              </h5>
              <p><%= service.lesson_detail %></p>
            </div>
          </div>
          <% end %>  
        </div>
      </div>     
    </div>
  </div>
  <div class="container">
    <div class="card card-plain">
      <div class="card-body px-0">
        <% @users.each do |user| %>
          <iframe width="560" height="315" src="https://www.youtube.com/embed/<%=user.self_introduce_movie_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <% end %>
      </div>
    </div>
  </div>
</div>
