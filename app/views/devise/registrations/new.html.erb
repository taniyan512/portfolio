<body class="text-center">
<main class="form-signin">
<h1 class="h3 mb-3 fw-normal">Welcome!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", placeholder: "Email address" %>
  </div>

  <div class="form">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "floatingInput", placeholder: "password(6文字以上)" %>
  </div>

  <div class="form">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "floatingInput", placeholder: "もう一度passwordを入力" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する！", class: "w-100 btn btn-lg btn-primary" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</main>
</body>
