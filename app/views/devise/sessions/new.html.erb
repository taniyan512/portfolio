<body class="text-center">
<main class="form-signin">
<h1 class="h3 mb-3 fw-normal">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", placeholder: "Email address" %>
  </div>

  <div class="form">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "floatingInput", placeholder: "password(6文字以上)" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "w-100 btn btn-lg btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</main>
